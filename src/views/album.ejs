<%- include partials/header %>
<%- include partials/navbar %>


  <div class="container">
    <div class="col">
      <h1><a href="/albums/<%= album.id %>"><%= album.title %></a></h1>
      <div class="row">
        <div class="col">
          <h2>Reviews</h2>
        </div>
        <% if(user) { %>
          <a class="btn btn-secondary" href="/albums/<%= album.id %>/reviews/new">Add Review</a>
        <% } %>
      </div>
      <br></br>
        <% reviews.forEach((review) => { %>
          <div id="<%= review.id %>">
            <h5><%=album.title%></h5>
            <span>Review Date: <%= moment(review.date_created).format('MMM DD, YYYY') %></span>
            <br>
            <span>Description: <%=review.description%></span>
            <br>
            <span>Author: <%=review.name%></span>
            <br>
            <% if(user) { %>
              <% if(user.name === review.name) { %>
                <button onClick="deletePopup(<%=review.id%>)" class="pull-right fa fa-trash" ></button>
              <% } %>
            <% } %>
            <br></br>
          </div>
        <% }) %>
    </div>
  </div>

<%- include partials/footer %>
